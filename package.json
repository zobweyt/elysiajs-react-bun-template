{
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "check": "biome check",
    "clean": "bun run --filter '*' clean && rm -rf node_modules",
    "dev": "bun run --filter '*' dev",
    "format": "biome format --write",
    "postinstall": "bun run --filter '*' postinstall",
    "lint": "biome lint",
    "prepare": "git config core.hooksPath .githooks",
    "start": "bun run --filter '*' start",
    "tsc": "bun run --filter '*' tsc"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "^1.3.3",
    "typescript": "^5.9.3"
  }
}
