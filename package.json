{
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "check": "bun run --filter '*' check",
    "clean": "bun run --filter '*' clean && rm -rf node_modules",
    "dev": "bun run --filter '*' dev",
    "format": "bun run --filter '*' format && biome format --write",
    "postinstall": "bun run --filter '*' postinstall",
    "lint": "bun run --filter '*' lint",
    "tsc": "bun run --filter '*' tsc"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "^1.3.3"
  }
}
